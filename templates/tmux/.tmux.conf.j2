{% for source in install_server_tmux.append_source_files -%}
  source-file {{ source }}
{% endfor %}

{% for plugin in install_server_tmux.plugins -%}
  {{ plugin.conf }}
{% endfor %}

{% for style in install_server_tmux.append_style_files -%}
  source-file {{ style }}
{% endfor %}

{% for plugin in install_server_tmux.plugins -%}
  {% if plugin.run is defined -%}
    {{ plugin.run }}
  {% endif %}
{% endfor %}

set -g status-bg default
set -g status-style bg=default
set -g pane-active-border-style 'fg=default,bg=default'
set -g pane-border-style 'fg=default,bg=default'
